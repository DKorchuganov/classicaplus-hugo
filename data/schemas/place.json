{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Place",
    "description": "A place of an event",
    "type": "object",
    "properties": {
        "name": {
            "title": "Place name",
            "description": "Place name in different languages",
            "type": "object",
            "patternProperties": {
                "^[a-z]{2}$": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "address": {
            "title": "Place address",
            "description": "Place address in different languages",
            "type": "object",
            "patternProperties": {
                "^[a-z]{2}$": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "phones": {
            "title": "Phones",
            "description": "Array of phones with descriptions",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "desc": {
                        "title": "Description",
                        "description": "Phones description in different languages",
                        "type": "object",
                        "patternProperties": {
                            "^[a-z]{2}$": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": false
                    },
                    "numbers": {
                        "title": "Phone numbers",
                        "description": "Array of phone numbers",
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "call": {
                                    "title": "Call",
                                    "description": "Phone number to call by click",
                                    "type": "string",
                                    "pattern": "^\\+[0-9]+"
                                },
                                "print": {
                                    "title": "Call",
                                    "description": "Phone number to print on the page",
                                    "type": "string"
                                }
                            },
                            "required": [
                                "call", "print"
                            ],
                            "additionalProperties": false
                        },
                        "minItems": 1,
                        "uniqueItems": true
                    }
                },
                "required": [
                    "desc", "numbers"
                ],
                "additionalProperties": false
            },
            "minItems": 1,
            "uniqueItems": true
        }
    },
    "required": [
        "name", "address"
    ],
    "additionalProperties": false
}