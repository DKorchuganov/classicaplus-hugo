{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Composer",
    "description": "Composer personal data",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "description": "Person first, last and full name in different languages",
            "type": "object",
            "patternProperties": {
                "^[a-z]{2}$": {
                    "type": "object",
                    "properties": {
                        "first": {
                            "type": "string"
                        },
                        "last": {
                            "type": "string"
                        },
                        "full": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "first", "last", "full"
                    ],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "name"
    ],
    "additionalProperties": false
}